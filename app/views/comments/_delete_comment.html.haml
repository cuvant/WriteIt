#deleteComment-modal.modal.fade.hmodal-danger{"aria-hidden" => "true", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .color-line
      .modal-header.set-padding-top-10.set-padding-bottom-10
        %h4.modal-title{style: "text-align: left;"}
          Delete Comment
      .modal-body
        %h3.text-center
          = "Are you sure you want to delete the comment?"
          %br
          = raw "'#{comment.content}'"
        %br
        .text-center
          = link_to "Yes, delete comment!", micropost_comment_path(micropost, comment), data: {post_id: micropost.id, value: micropost.comments.count}, method: :delete, remote: true, id: "delete-#{comment.id}", class: "btn btn-danger delete-comment"
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Kepp browsing!
