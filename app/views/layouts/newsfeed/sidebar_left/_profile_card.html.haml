.profile-card{style: "background: linear-gradient(to bottom, rgba(39, 170, 225, 0.8), rgba(28, 117, 188, 0.8)), url(#{current_user.timeline_cover.newsfeed_cart}) no-repeat;"}
  = image_tag current_user.image.user_avatar, class: "profile-photo"
  -# %img.profile-photo{:alt => "user", :src => "http://placehold.it/300x300"}/
  %h5
    = link_to current_user.user_name, profile_path(current_user.user_name), class: "text-white"
  %i.ion.ion-android-person-add
  .current_user_followers_count{id: "current_user_followers_count_#{current_user.id}"}
    = pluralize current_user.followers.count, 'follower'
